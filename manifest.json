{
    "manifest_version": 3,
    "name": "Simple Meta Extension Controller",
    "version": "1.0",
    "description": "Enable or disable all extensions with a single click.",
    "permissions": [
      "management"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  